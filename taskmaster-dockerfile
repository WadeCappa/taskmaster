# Build stage
FROM golang:1.26 AS build

COPY . .

RUN go build -ldflags="-linkmode external -extldflags -static" -tags netgo -o /app/build ./cmd/taskmaster/main.go

# Deploy stage
FROM scratch 

COPY --from=build /app/build build
COPY --from=build /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/

ENTRYPOINT ["/build"]
CMD ["--auth-hostname", "auth.wcappa.com", "--auth-conn-secure", "true"]
